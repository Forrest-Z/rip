<appendage-template>
    <constructors>
        <constructor type="char" variable="digital_output_pins">
            <argument name="pin" type="int"/>
        </constructor>
    </constructors>

    <setup>
        pinMode(digital_output_pins[i], OUTPUT);
    </setup>

    <commands>
        <command id="kWriteDigitalOutput" name"writeDigitalOutput" index-num="true">
            <parameter type="bool" name="output"/>
            <code>
                typedef enum { HIGH, LOW } out_t;
                out_t bit = output ? HIGH : LOW;
                digitalWrite(digital_output_pins[index_num], bit);
            </code>
        </command>
    </commands>
</appendage-template>
