<appendage-template>
    <constructors>
        <constructor type="char" variable="digital_input_pins">
            <argument name="pin" type="int"/>
        </constructor>
    </constructors>

    <setup>
        pinMode(digital_input_pins[i], INPUT$pullup$);
    </setup>

    <commands>
        <command id="kReadDigitalInput" name="readDigitalInput" index-num="true">
            <return-value name="rv" type="char"/>
            <code>
                rv = digitalRead(digital_input_pins[index_num]);
            </code>
        </command>
    </commands>
</appendage-template>
